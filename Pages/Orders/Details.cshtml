@page
@model PRN221_Group3_Project_HotelManagement.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Order Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderNote)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderCheckin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderCheckin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderCheckout)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderCheckout)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Order.OrderStatus == 1)
            {
                    <p>Active</p>
            }
            @if(Model.Order.OrderStatus == 0)
            {
                <p>DeActive</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        
        <dt class="col-sm-2">
            Room
        </dt>
        <dd class="col-sm-10">
            @ViewBag.RoomLists.RoomName
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @ViewBag.OrderDetailLists.DetailPrice
        </dd>

    </dl>
</div>
<div>
    <button type="button" class="btn btn-primary">
        <a class="text-decoration-none text-white" asp-page="./Edit" asp-route-id="@Model.Order?.OrderId">Edit</a>
    </button>
    <button type="button" class="btn btn-primary">
        <a class="text-decoration-none text-white" asp-page="./Index">Back to List</a>
    </button>
</div>
