@model PRN221_Group3_Project_HotelManagement.Pages.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderNote)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderCheckin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderCheckin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderCheckout)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderCheckout)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Order.OrderStatus == 1)
            {
                <p>Active</p>
            }
            @if(Model.Order.OrderStatus == 0)
            {
                <p>DeActive</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Order.OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <button type="button" class="btn btn-primary">
            <a class="text-decoration-none text-white" asp-page="./Index">Back to List</a>
        </button>
        
    </form>
</div>
