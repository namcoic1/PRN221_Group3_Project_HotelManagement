@page
@model PRN221_Group3_Project_HotelManagement.Pages.Bookings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Booking Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomHotel)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model =>model.RoomHotel.RoomImage)" style="width:200px;height:160px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderNote)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderCheckin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderCheckin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderCheckout)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderCheckout)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Order.OrderStatus == 1)
            {
                <p>Active</p>
            }
            @if (Model.Order.OrderStatus == 0)
            {
                <p>DeActive</p>
            }
  
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.DetailPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.DetailPrice) $
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetail.DetailCount) 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetail.DetailCount)
        </dd>
        
    </dl>
</div>
<div>
    <button type="button" class="btn btn-primary">
        <a class="text-decoration-none text-white" asp-page="./Index">Back to List</a>
    </button>
</div>
