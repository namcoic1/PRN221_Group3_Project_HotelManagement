            <th>
                @Html.DisplayNameFor(model => model.RoomHotel[0].RoomImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomHotel[0].RoomBed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomHotel[0].RoomDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomHotel[0].RoomPrice)
            </th>
