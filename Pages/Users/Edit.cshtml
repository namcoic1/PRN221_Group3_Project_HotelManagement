@page
@model PRN221_Group3_Project_HotelManagement.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.UserId" />
            <div class="form-group">
                <img src="@ViewBag.ImageSrc" id="img_preview" style="width:200px;height:150px" alt="Image room" />
            </div>
            <div class="form-group">
                <label class="control-label">Upload Image</label>
                <input type="file" id="img_upload" name="img_upload" accept="image/*" value="@ViewBag.ImageSrc" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="User.UserPhone" class="control-label"></label>
                <input asp-for="User.UserPhone" class="form-control" />
                <span asp-validation-for="User.UserPhone" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="User.UserPassword" class="control-label"></label>
                <input asp-for="User.UserPassword" class="form-control" />
                <span asp-validation-for="User.UserPassword" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="User.UserName" class="control-label"></label>
                <input asp-for="User.UserName" class="form-control" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="User.UserWallet" class="control-label"></label>
                <input asp-for="User.UserWallet" class="form-control" />
                <span asp-validation-for="User.UserWallet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.UserStatus" class="control-label"></label>
                <select class="form-control" aria-label=".form-select-lg example" asp-for="@Model.selected">
                    <option value="1">Active</option>
                    <option value="0">DeActive</option>
                </select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-primary mt-3">
        <a class="text-decoration-none text-white" asp-page="./Index">Back to List</a>
    </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
