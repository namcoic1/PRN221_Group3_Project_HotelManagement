@page
@model PRN221_Group3_Project_HotelManagement.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserImage)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model =>model.User.UserImage)" style="width:200px;height:160px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserPassword)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserPassword)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserWallet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserWallet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserStatus)
        </dt>
        <dd class="col-sm-10">
            @if (Model.User.UserStatus == 1)
            {
                <p>Active</p>
            }
            @if (Model.User.UserStatus == 0)
            {
                <p>DeActive</p>
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="User.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <button type="button" class="btn btn-primary">
            <a class="text-decoration-none text-white" asp-page="./Index">Back to List</a>
        </button>
    </form>
</div>
